{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(make:*)",
      "Bash(adb:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo:*)",
      "Bash(curl * | bash)",
      "Bash(wget * | bash)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '%s (%s)' \"$(basename \"$(pwd)\")\" \"$(git branch --show-current 2>/dev/null || echo 'no-branch')\""
  }
}
